PROGRAM         = Produce_Ntuple 
CC              = g++
LD              = g++
CXXFLAGS        = -g -O2 -I$(ROOTSYS)/include -std=c++17
LDFLAGS         = $(LIBS) $(GLIBS) -B/usr/X11R6/lib -B/usr/lib64 
OPT             =
ROOTLIBS        = $(shell root-config --libs)
ROOTGLIBS       = $(shell root-config --glibs)


LIBS            = $(ROOTLIBS)
GLIBS           = $(ROOTGLIBS) -L/usr/X11R6/lib -lXext
OBJS            = CommonTools.o  ntuple_maker.o
INPUTS	   	= $(MUONID_INPUTS)  ntuple_maker.cpp

all: $(OBJS) 															
	$(CC) $(OPT) $(LDFLAGS) -o $(PROGRAM) -g $(OBJS) $(LIBS)

ntuple_maker.o: ntuple_maker.cpp $(INPUTS) 
	$(CC) $(CXXFLAGS) -c ntuple_maker.cpp


CommonTools.o: CommonTools.hpp CommonTools.cpp
	$(CC) $(CXXFLAGS) -c CommonTools.cpp
clean:
	-rm -f *~ $(OBJS) core core.*	
	-rm -rf ti_files
	-rm -f $(PROGRAM)
	-rm -f *~;

distclean:						
	-rm -f *~ $(PROGRAM) $(OBJS)
	-rm -rf ti_files

run: $(PROGRAM) $(OBJS)	
	make all
	./$(PROGRAM) 1

